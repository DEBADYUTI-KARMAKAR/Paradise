<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Hotelground</h1>
    <div class="col-6 offset-3">
        <form action="/hotelgrounds/<%=hotelground._id%>?_method=PUT" method="POST" novalidate class="validated-form"  enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hotelground[title]"
                    value="<%=hotelground.title %> " required >
                    <div class="valid-feedback">
                        Valid
                    </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hotelground[location]"
                    value="<%=hotelground.location %>" required>
                    <div class="valid-feedback">
                        Valid
                    </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="price">Hotelground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="hotelground[price]" value="<%=hotelground.price %>" required>
                        <div class="valid-feedback">
                            Valid
                        </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="hotelground[description]" required><%= hotelground.description%></textarea>
                    <div class="valid-feedback">
                        Valid
                    </div>
            </div>
            <div class="mb-3">
                <label for="">Upload Images</label>
                <div class="input-group mb-3 custom-file">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text custom-file-label" for="image">Add More</label>
                </div>
            </div>
            <div class="mb-3">
                <% hotelground.image.forEach(function(img, i) { %>
                    <img src="<%=img.url %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Hotelground</button>
            </div>
            
        </form>
        <a href="/hotelgrounds/<%= hotelground._id%>">Back To Hotelground</a>

    </div>
</div>