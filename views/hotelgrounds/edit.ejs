<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Hotelground</h1>
    <div class="col-6 offset-3">
        <form action="/hotelgrounds/<%=hotelground._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hotelground[title]"
                    value="<%=hotelground.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hotelground[location]"
                    value="<%=hotelground.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="hotelground[image]"
                    value="<%=hotelground.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Hotelground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="hotelground[price]" value="<%=hotelground.price %>">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="hotelground[description]"><%= hotelground.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Hotelground</button>
            </div>
        </form>
        <a href="/hotelgrounds/<%= hotelground._id%>">Back To Hotelground</a>

    </div>
</div>