<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= hotelground.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= hotelground.title%></h5>
                <p class="card-text"><%= hotelground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= hotelground.location%></li>
                <li class="list-group-item">$<%= hotelground.price%>/night</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/hotelgrounds/<%=hotelground._id%>/edit">Edit</a>
                <form class="d-inline" action="/hotelgrounds/<%=hotelground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
        <h2>Leave a Review</h2>
        <form action="" class="mb-3">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" class="form-range" name="review[rating" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>

            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>