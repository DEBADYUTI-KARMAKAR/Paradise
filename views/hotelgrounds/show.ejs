<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 ">
        <div class="card mb-3">
            <img src="<%= hotelground.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= hotelground.title%></h5>
                <p class="card-text"><%= hotelground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= hotelground.location%></li>
                <li class="list-group-item "><%= hotelground.author.username%></li>

                <li class="list-group-item">$<%= hotelground.price%>/night</li>
            </ul>
            <% if( currentUser && hotelground.author.equals(currentUser._id)) { %>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/hotelgrounds/<%=hotelground._id%>/edit">Edit</a>
                <form class="d-inline" action="/hotelgrounds/<%=hotelground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
        </div>
        <div class="col-6">
            <% if(currentUser) { %>
            <h2>Leave a Review</h2>
        <form action="/hotelgrounds/<%=hotelground._id%>/reviews" method="POST" class="mb-3 validated-form"  novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating" >Rating</label>
                <input class="form-range" type="range" min="1" max="5"  name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>

                <div class="valid-feedback">
                    Valid
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% } %>
        <% for(let review of hotelground.reviews) { %>
            <div class="card mb-3">

                <div class=" card-body">
                    <h5 class="card-title">Rating <%= review.rating %></h5>
                    <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username%></h6>
                    <p class="card-title">Review: <%= review.body %></p>
                    <% if( currentUser && review.author.equals(currentUser._id)) { %>
                    <form action="/hotelgrounds/<%= hotelground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
        <% }%>
        
    </div>
</div>